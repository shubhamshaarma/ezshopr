{
    "hosting": {
        "public": "out",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/cart",
                "destination": "/cart.html"
            },
            {
                "source": "/cart/**",
                "destination": "/cart/success.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
